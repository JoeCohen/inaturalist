.container
  .row
    .col-md-12
      %h2
        =t :editing_taxon_range_for_taxon_html, taxon: default_taxon_name( @taxon_range.taxon )
      = form_for(@taxon_range, :builder => DefaultFormBuilder, :html => {:multipart => true}) do |f|
        = f.error_messages
        = render :partial => 'form_fields', :locals => {:f => f}
        .clear.buttonrow.upstacked
          = f.submit t(:update), :class => "default button"
          = link_to t(:back), @taxon_range.taxon || taxa_path, :class => "button"
          = link_to t(:delete), @taxon_range, :method => :delete,           |
            :data => {:confirm => t(:are_you_sure_want_delete_this_range)}, |
            :class => "minor delete button"
        %br/
      - if @taxon_range.user
        .row.meta
          .col-md-12
            = t(:created_by, gender: 'taxon')
            = link_to @taxon_range.user.login, @taxon_range.user
            = t :on_day
            = l(@taxon_range.created_at.to_date, :format => :long)
      - if @taxon_range.updater
        .row.meta
          .col-md-12
            = t(:updated_by)
            = link_to @taxon_range.updater.login, @taxon_range.updater
            = t :on_day
            = l(@taxon_range.updated_at.to_date, :format => :long)
